/* 拼团或砍价  */
.groups .groups_header {
  border-top:20rpx solid #f6f7f7;  
}
.group_show_more {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  background: #FDE5DB;
  color: #FF893F;
  display: flex;
  justify-content: space-between;
}
.group_show_more .more {
  color: #999999;
  font-size: 26rpx;
}
.header_users {
  padding: 0 20rpx;
}
.header_users .user_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  font-size: 24rpx;
}
.header_users .user_item:not(:last-child) {
  border-bottom: 1px solid #EBEBEB;
}
.user_item .user_info {
  display: flex;
  max-width: 50%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
  align-items: center;
}
.user_item .user_info image {
  display: block;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}
.user_item .user_info text {
  font-size: 32rpx;
  color: #333333;
  margin-left: 10rpx;
  display:inline-block;
  max-width:75%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.user_item .user_operation {
  display: flex;
  align-items: center;
}
.user_operation .user_prompt {
  margin-right: 54rpx;
}
.user_prompt .prompt_texts {
  font-size: 28rpx;
  color: #333333;
}
.user_prompt .prompt_texts .red {
  color: #F02417;
}
.user_prompt .rest_time {
  font-size: 24rpx;
  color: #999;
}
.user_operation .prompt_button {
  width: 128rpx;
  height: 50rpx;
  background-image: linear-gradient(90deg, #FC4E61 0%, #EB5362 100%);
  border-radius: 4rpx;
  font-size: 24rpx;
  padding: 0;
  color: #FFFFFF;
  text-align: center;
  line-height: 50rpx;
}
.groups .groups_bottom {
  border-top: 20rpx solid  #F6F7F7;
}
.groups .play_rules {
  padding: 16rpx 20rpx;
  color: #333333;
  font-size: 28rpx;
  display: flex;
  border-bottom: 1px solid #EBEBEB;
  justify-content: space-between;
  align-items: center;
}
.play_rules .more {
  color: #999;
  font-size: 26rpx;
  display:flex;
  align-items:center;
}
.play_rules .more .step_arrow_right {
  margin-left: 10rpx;
}
.groups_bottom .rules_step {
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.rules_step .step_item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.step_item .step_text {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 24rpx;
  color: #666;
  margin-top: 16rpx;
}
.step_arrow_right {
  width: 12rpx;
	height: 20rpx;
}
.rules_step .step_item image {
  width: 60rpx;
  height: 60rpx;
  display: block;
}


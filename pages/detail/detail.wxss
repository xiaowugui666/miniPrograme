}

/* bottom button  */
.detail_bottom{
	width: 750rpx;
	height: 100rpx;
	position: fixed;
	bottom: 0;
  z-index: 100;
  background: #fff;
	/* border-top: 1rpx #D7D7D7 solid; */
	box-sizing: border-box;
	display: flex;

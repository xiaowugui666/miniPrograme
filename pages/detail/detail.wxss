	background: #FFEEEE;
	font-size: 32rpx;
	color: #FB4F4F;
	text-align: center;
	line-height: 100rpx;
  border-radius:0;
  padding:0;
}
.detail_bottom .disAddcart{
  background: #CACACA;
  color: #fff;
}
.detail_bottom button:after{
  border-radius: 0;
  border: 0;
}
.detail_bottom .buy{
	width: 42%;
	height: 100rpx;
	background: #EA2534;
	font-size: 32rpx;
	text-align: center;
	line-height: 100rpx;
	color: #FFFFFF;
  border-radius:0;
  padding:0;
}
.detail_bottom .group_button {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 20rpx;
  font-size: 24rpx;
}
.group_button view:last-child {
  margin-top: 14rpx;
}
.group_button .group_button_price {
  font-size: 36rpx;
}
.detail_bottom .disBuy{
  background: #B4B0B1
}
.soldTips{
  position: fixed;

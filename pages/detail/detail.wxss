/* choose  */
.choose{
	position: fixed;
	z-index: 100;
	/* height: 900rpx; */
	width: 750rpx;
	box-sizing: border-box;
	bottom: 0;
	background: #FFFFFF;
}
.choose_price{
	border-bottom: 1rpx solid #EDEDED;
	width: 710rpx;
	margin: 0 auto;
	height:154rpx;
}
.choose .choose_price image:first-child{
	width: 160rpx;
	height: 160rpx;
	position: absolute;
	top: -34rpx;
	left: 20rpx;
}
.choose_price .desc{
	position: absolute;
	left: 192rpx;
	top: 12rpx;
	display: flex;
	flex-direction: column;
}
.choose_price .desc view{
  font-size: 24rpx;
	color: #3A3A3A;
	letter-spacing: 1.8rpx;
}
.choose_price .desc view text{
  margin-right: 10rpx;
}
.choose_price .desc>text:first-child{
	color: #F02317;
	font-size: 36rpx;
}
.choose_price .desc>text:nth-child(2){
	color: #999;
	font-size: 24rpx;
  margin-bottom:6rpx;
}
.choose_price image:last-child{
	position: absolute;
	top: 20rpx;
	right: 20rpx;
	width: 32rpx;
	height: 32rpx;
}


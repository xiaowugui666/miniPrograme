  padding-bottom: 20rpx;
}
.sales_count {
  font-size: 24rpx;
  color: #999;
}
.detail_price .display_member {
  display: flex;
  align-items: center;
}
.display_member .group_info {
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  margin-left: 18rpx;
}
.group_info .group_member {
  font-size: 24rpx;
  color: #FB4F4F;
  background: #FFE4E4;
}
.detail_price .price {
	font-size: 48rpx;
	color: #F02417;

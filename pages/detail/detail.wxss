	align-items: center;
	flex-direction: column;
	justify-content: center;
}
.detail_cart label{
  position: absolute;
  background: #EA2534;
  color: #fff;
  line-height: 30rpx;
  text-align: center;
  top:10rpx;
  right: 20rpx;
  font-size: 20rpx;
  min-width:30rpx;
  height: 30rpx;
  border-radius: 15rpx; 
}
.detail_bottom .addCart{
	width: 42%;
	height: 100rpx;
  border-top:1rpx #D7D7D7 solid;

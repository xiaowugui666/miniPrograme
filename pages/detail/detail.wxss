/* count  */
.count{
	width: 710rpx;
	height: 106rpx;
	margin-left: 18rpx;
	border-top: 1rpx solid #EDEDED;
	display: flex;
	align-items: center;
  margin-bottom: 100rpx;
	justify-content: space-between;
}
.count .number{
	font-size: 28rpx;
	color: #666;
	letter-spacing: 2.1rpx;
}
.count view{
	width: 256rpx;
	height: 56rpx;
	display: flex;
}
.count view text{
	display: block;
	width: 72rpx;
	height: 56rpx;
	text-align: center;
	line-height: 56rpx;
	border: 1rpx solid #D9D9D9;
}
.count view text.add{
	color: #FF547B;
}
.count view .num{
	width: 116rpx;
	height: 56rpx;
	font-size: 28rpx;
	border: none;
	border-top: 1rpx solid #D9D9D9;
	border-bottom: 1rpx solid #D9D9D9;
	color: #121212;
	line-height: 56rpx;
	text-align: center;
}

